<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnSum"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:text="+"
        app:layout_constraintStart_toStartOf="@id/btnDivide"
        app:layout_constraintEnd_toEndOf="@id/btnDivide"
        app:layout_constraintBottom_toTopOf="@id/btnSubtract" />


    <Button
        android:id="@+id/btn1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@id/btn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_top" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:text="2"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintTop_toTopOf="@id/guideline_top" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:text="3"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintTop_toTopOf="@id/guideline_top" />

    <Button
        android:id="@+id/btnSubtract"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:text="-"
        app:layout_constraintStart_toStartOf="@id/btnDivide"
        app:layout_constraintEnd_toEndOf="@id/btnDivide"
        app:layout_constraintBottom_toBottomOf="@id/btn2"
        app:layout_constraintTop_toTopOf="@id/btn2"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:text="4"
        app:layout_constraintEnd_toStartOf="@id/btn5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn1" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:text="5"
        app:layout_constraintStart_toEndOf="@id/btn4"
        app:layout_constraintTop_toBottomOf="@id/btn1" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:text="6"
        app:layout_constraintStart_toEndOf="@id/btn5"
        app:layout_constraintTop_toBottomOf="@id/btn1" />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:text="X"
        app:layout_constraintStart_toStartOf="@id/btnDivide"
        app:layout_constraintEnd_toEndOf="@id/btnDivide"
        app:layout_constraintTop_toBottomOf="@id/btn2" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:text="7"
        app:layout_constraintEnd_toStartOf="@id/btn8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn4" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:text="8"
        app:layout_constraintEnd_toStartOf="@id/btn9"
        app:layout_constraintTop_toBottomOf="@id/btn4" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:text="9"
        app:layout_constraintStart_toEndOf="@id/btn8"
        app:layout_constraintTop_toBottomOf="@id/btn4" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:text="/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn9"
        app:layout_constraintTop_toBottomOf="@id/btn4" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="@id/btn8"
        app:layout_constraintEnd_toEndOf="@id/btn8"
        app:layout_constraintTop_toBottomOf="@id/btn7" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:text="="
        app:layout_constraintStart_toStartOf="@id/btnDivide"
        app:layout_constraintEnd_toEndOf="@id/btnDivide"
        app:layout_constraintTop_toBottomOf="@id/btn8" />


    <Button
        android:id="@+id/btnDigitFree"
        android:text="FREE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDigitAsk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn0" />

    <Button
        android:id="@+id/btnDigitAsk"
        android:text="ASK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCount"
        app:layout_constraintStart_toEndOf="@id/btnDigitFree"
        app:layout_constraintTop_toBottomOf="@id/btn0" />

    <Button
        android:id="@+id/btnCount"
        android:text="COUNT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnQuestion"
        app:layout_constraintStart_toEndOf="@id/btnDigitAsk"
        app:layout_constraintTop_toBottomOf="@id/btn0" />

    <Button
        android:id="@+id/btnQuestion"
        android:text="QUESTION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnCount"
        app:layout_constraintTop_toBottomOf="@id/btn0" />

    <Button
        android:id="@+id/btnPrev"
        android:text="PREV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/btnNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDigitFree" />

    <Button
        android:id="@+id/btnNext"
        android:text="NEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnPrev"
        app:layout_constraintTop_toBottomOf="@id/btnDigitFree" />

    <Button
        android:id="@+id/btnRepeat"
        android:text="Repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/btnNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnNext" />

    <Button
        android:id="@+id/btnSong"
        android:text="Song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnPrev"
        app:layout_constraintTop_toBottomOf="@id/btnNext" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

</androidx.constraintlayout.widget.ConstraintLayout>